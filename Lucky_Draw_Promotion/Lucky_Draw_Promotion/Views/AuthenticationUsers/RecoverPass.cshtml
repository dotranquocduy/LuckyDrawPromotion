@model Lucky_Draw_Promotion.Models.userAccount
@{
    ViewBag.Title = "RecoverPass";
    Layout = "~/Views/Shared/_LayoutLandingPage.cshtml";
}

<form class="login100-form validate-form" action="" method="post">
    <span class="login100-form-title" style="font-weight:bold;">
        Đổi mật khẩu
    </span>

    <div class="wrap-input100 validate-input" data-validate="Password is required">
       @Html.DisplayFor(model =>model.pass)
        <input class="input100" type="password" name="pass" placeholder="Password">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
        </span>
    </div>

    <div class="wrap-input100 validate-input" data-validate="Password is required">
      @Html.DisplayFor(model =>model.repass)
        <input class="input100" type="password" name="repass" placeholder="Confirm Password">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
        </span>
    </div>

    <div class="container-login100-form-btn">
        <button class="login100-form-btn">
            Xác nhận
        </button>
    </div>

    
</form>
