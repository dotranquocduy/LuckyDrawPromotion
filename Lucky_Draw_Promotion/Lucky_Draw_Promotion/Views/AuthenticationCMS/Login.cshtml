
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAuthenicationCMS.cshtml";
}


    <h1 style="text-align: center;margin: 24px 0 12px 0;">Login</h1>
    <div class="container">
        <label for="email"><b>Email</b></label>
        <input type="text" placeholder="Enter Email" name="email" required>

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="psw" required>

        <button type="submit" name="submit"  value="lg" class="g-recaptcha" data-sitekey="6Lf2RvMeAAAAAK0f0HjDQ-RzVuRCnXopzb7FtdO3">Login</button>
        <label>
            <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>
    </div>

    <div class="container">
        <span class="psw">Forgot <a href="@Url.Action("ForgotPass","AuthenticationCMS")">password?</a></span>
    </div>



