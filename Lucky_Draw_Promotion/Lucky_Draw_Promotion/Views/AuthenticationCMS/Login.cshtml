@model Lucky_Draw_Promotion.Models.userAccount
@{
    ViewBag.Title = "Login";
    Layout = "";

}
<link href="~/Content/CSS/Layout1.css" rel="stylesheet" />
<style>
    * {
        background-color: #D1CFF3;
    }
</style>
<form action="@Url.Action("Login","AuthenticationCMS")" method="post">
    <div class="imgcontainer">
        <img src="~/Content/images/AccountUser.png" alt="Avatar" class="avatar">
    </div>
    <h1 style="text-align: center;margin: 24px 0 12px 0;">Login</h1>
    <div class="container">
        <label for="email"><b>Email</b></label>
        @Html.DisplayFor(model => model.email)
        <input type="text" placeholder="Enter Email" name="email" required>

        <label for="psw"><b>Password</b></label>
        @Html.DisplayFor(model => model.pass)
        <input type="password" placeholder="Enter Password" name="pass" required>

        <input style="display:none" name="urlString" value="@Request.UrlReferrer" />
        <div data-sitekey="6Lf2RvMeAAAAAK0f0HjDQ-RzVuRCnXopzb7FtdO3"></div>
        <button type="submit" name="submit" value="lg" class="g-recaptcha">Login</button>
        <label>
            <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>
    </div>

    <div class="container">
        <span class="psw">Forgot <a href="@Url.Action("ForgotPass","AuthenticationCMS")">password?</a></span>
    </div>
</form>




<script src='https://www.google.com/recaptcha/api.js' type="text/javascript"></script>
